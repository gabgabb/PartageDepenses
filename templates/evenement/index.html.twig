{% extends "base.html.twig" %}

{% block title %} Événement entre amis !{% endblock %}

{% block body %}
    <h1>Liste des événements en cours</h1>
    <table class="table table-striped table-borderless">
        <tr>
            <th>#</th>
            <th>Nom de l'événement</th>
            <th> Nombre de participants </th>
            <th>Actions</th>
        </tr>
        {% for e in evenement  %}
            <tr>
                <td>{{ e.id}}</td>
                <td>{{ e.nom}}</td>
                <td> {{ e.participants.count }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path("evenement_modifier",{"id":e.id}) }}"> Modifier l'événement </a>
                    <a type="button" class="btn btn-sm btn-danger" href="{{ path("evenement_supprimer",{"id":e.id}) }}"> Retirer un événement </a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <a class="btn btn-sm btn-primary" href="{{ path("evenement_ajouter") }}"> Ajouter un événement</a>
{% endblock %}
